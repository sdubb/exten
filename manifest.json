  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr - AI Job Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup-styles.css", "icons/*", "utils/message-handler.js", "autopilot-engine.js", "resume-optimizer.js", "referral-finder.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Auto-fill current form"
    },
    "analyze": {
      "suggested_key": {
        "default": "Ctrl+Shift+J"
      },
      "description": "Analyze job match"
    },
    "save-job": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current job"
    },
    "toggle-autopilot": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Toggle autopilot mode"
    }
  }
